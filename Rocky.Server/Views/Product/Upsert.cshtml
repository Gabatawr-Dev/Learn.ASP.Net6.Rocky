@using Rocky.Utility
@model Rocky.Models.Product.ProductUpsertModel

@{
    var isUpdate = Model.Product!.Id != 0;
    var title = $"{(isUpdate ? "Edit" : "Create")} Product";
}

<form method="post" enctype="multipart/form-data">
    @if (@isUpdate){ <input asp-for="@Model.Product.Id" hidden /> }

    <div class="border p-3 bg-white">
        <div class="row">
            <h2 class="text-info ps-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="row mt-3">
                    <div class="col-4">
                        <label asp-for="@Model.Product.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Product.Name" class="form-control" />
                        <span asp-validation-for="@Model.Product.Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="row mt-3">
                    <div class="col-4">
                        <label asp-for="@Model.Product.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Product.Price" class="form-control" />
                        <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
                    </div>

                </div>
                <div class="row mt-3">
                    <div class="col-4">
                        <label asp-for="@Model.Product.Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="@Model.Product.Description" class="form-control summernote"></textarea>
                    </div>

                </div>
                <div class="row mt-3">
                    <div class="col-4">
                        @nameof(Model.Product.Image)
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" id="uploadBox" multiple class="form-control" />
                    </div>

                </div>
                <div class="row mt-3">
                    <div class="col-4">
                        <label asp-for="@Model.Product.CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList"
                                class="form-select">
                            <option selected disabled>--Select Category--</option>
                        </select>
                        <span asp-validation-for="@Model.Product.CategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (isUpdate)
                            {
                                <input type="submit" class="btn btn-success w-100" value="Update" />
                            }
                            else
                            {
                                <input type="submit" onclick="return validateInput();"
                                       class="btn btn-primary w-100" value="Create" />
                            }
                            
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary">
                                <i class="fa-solid fa-right-from-bracket"></i> &nbsp; Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 pt-3 pe-3">
                @if (isUpdate)
                {
                    <img src="@Const.ProductImages@Model.Product.Image" alt="Product Image"
                         width="100%" style="border-radius: 5px; border: 1px solid #bbb;"/>
                }
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }

    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 126,
                toolbar: [
                    ['style', ['bold', 'italic', 'underline', 'clear']],
                    ['font', ['strikethrough', 'superscript', 'subscript']],
                ],
            });
        });
        function validateInput() {
            if (document.getElementById("uploadBox").value == "") {
                Swal.fire(
                  'Error!',
                  'Please upload an Image!',
                  'error');
                return false;
            }
            else return true;
        }
    
    </script>
}