@using Rocky.Utility
@model Rocky.Models.Product.ProductDTO

<form method="post">
    <input asp-for="Id" hidden />

    <div class="border p-3 bg-white">
        <div class="row">
            <h2 class="text-danger ps-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="row mt-3">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Name" class="form-control" />
                    </div>

                </div>
                <div class="row mt-3">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Price" class="form-control" />
                    </div>

                </div>
                <div class="row mt-3">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea disabled asp-for="Description" class="form-control summernote"></textarea>
                    </div>

                </div>
                <div class="row mt-3">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Category!.Name" class="form-control" />
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary">
                                <i class="fa-solid fa-right-from-bracket"></i> &nbsp; Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 pt-3 pe-3">
                <img src="@Const.ProductImages@Model.Image" alt="Product Image"
                     width="100%" style="border-radius: 5px; border: 1px solid #bbb;" />
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 126,
                toolbar: false,
            });
            $('.summernote').summernote('disable');
        });
    </script>
}